<StackLayout class="sidedrawer">
    <StackLayout>
        <Label text="{{title}}" cssClass="sidedrawer-title"/>
        <ListView id="menuList" items="{{ items }}" itemTap="{{onTap}}">
            <ListView.itemTemplate>
                <Label text="{{ label }}" textWrap="true" cssClass="sidedrawer-listitem" />
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</StackLayout>