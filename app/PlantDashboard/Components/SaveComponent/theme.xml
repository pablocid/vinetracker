  <GridLayout columns="*" rows="auto, *" >
    <Label text="{{description}}" row="0" col="0" backgroundColor="white" textWrap="true" 
    style="font-size:26; text-align:center; color:#616161; padding:15; margin-top:20;"/>
    <GridLayout row="1" col="0" columns="*" rows="150, 100,50, 100">
        <!--<Image col="0" row="0" src="~/img/qrcode.png"/>-->
        <Label col="0" row="0" text="&#xf0c7;" style="font-size:150; text-align:center; margin-top:30;" class="icon"/>
        <Button col="0" row="1" text="Guardar" tap="{{onSave}}" style=" background-color:#0D47A1; color:white; border-radius:5; margin-top:32; font-size:25; width:300;"></Button>
        <Button col="0" row="3" text="Salir si guardar" tap="{{onCancel}}" style=" background-color:red; color:white; border-radius:5; margin-top:32; font-size:25; width:300;"></Button>
    </GridLayout>
  </GridLayout>