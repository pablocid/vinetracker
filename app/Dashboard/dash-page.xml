<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <Page.actionBar>
        <ActionBar title="Evaluaciones" style="background-color:green; color:white;">
            <!--<NavigationButton tap="{{goBack}}" text="go back" android.systemIcon = "ic_menu_back" style="background-color:white;"/>-->
            <ActionBar.actionItems>
                <ActionItem text="refresh" tap="{{ insert }}" position="left" style="color:white; background-color:white;"/>
                <ActionItem text="isLogin" tap="{{ isLogin }}" position="left" android.position="popup"/>
                <ActionItem text="EvaluaciÃ³n" tap="{{ toEvaluation }}" position="left" android.position="popup"/>
                <ActionItem text="Logout" tap="{{ logout }}" position="left" android.position="popup"/>
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*">
        <ListView items="{{ items }}">
                <!--Describing how the element will look like-->
                <ListView.itemTemplate>
                    <GridLayout columns="30, *" style="font-size:25; padding:10;">
                        <Label text="2" col="0" />
                        <Label text="{{ name }}" col="0" textWrap="true" col="1"/>
                    </GridLayout>
                </ListView.itemTemplate>
            </ListView>
    </GridLayout>
</Page>
