  <GridLayout columns="*" rows="auto, *" style="background-color: #0D47A1;" xmlns:dd="nativescript-drop-down" >
    <Label text="{{label}}" row="0" col="0" 
    backgroundColor="white" 
    textWrap="true" 
    style="font-size:40; text-align:center; color:#616161; padding:30;"/>
    <ScrollView row="1" col="0" >
        <StackLayout>
            <Label text="selecciona un valor" style="font-size:40; text-align:center; vertical-align:center; color:white; margin-top:50;"/>
            <dd:DropDown  hint="entero" items="{{ enteros }}" selectedIndex="{{ selectedIndex }}" 
            style="font-size:60; text-align:center; vertical-align:center; color:white; background-color:green; margin-top:50;"/>
            <!--<Label text="Decimales" style="font-size:40; text-align:center; vertical-align:center; color:white; "/>
            <dd:DropDown hint="decimal" items="{{ decimales }}" 
            style="font-size:60; text-align:center; vertical-align:center; color:white; background-color:green; "/> -->
        </StackLayout>
    </ScrollView> 
     
  </GridLayout>

