  <GridLayout columns="*" rows="auto, *" style="background-color: white;" xmlns:dd="nativescript-drop-down" >
    <Label text="{{label}}" row="0" col="0" 
    backgroundColor="white" 
    textWrap="true" 
    style="font-size:40; text-align:center; color:#616161; padding:30;"/>
    <ScrollView row="1" col="0" >
        <StackLayout>
            <TextView text="{{ value }}" textWrap="true" 
            keyboardType="{{keyboardType}}"
            style="font-size:20; text-align:center; border-color: gray; vertical-align:center; color:black; "/>
        </StackLayout>
    </ScrollView> 
     
  </GridLayout>

