  <GridLayout columns="*" rows="auto, *" style="background-color: #0D47A1;" xmlns:dd="nativescript-drop-down" >
    <Label text="{{description}}" row="0" col="0" 
    backgroundColor="white" 
    textWrap="true" 
    style="font-size:40; text-align:center; color:#616161; padding:30;"/>
    <ScrollView row="1" col="0" >
        <StackLayout>
            <Button text="Scan" tap="{{onScan}}" style="background-color:white; color:#616161; border-radius:60; margin-top:100; padding: 30;"></Button>
            <Label text="{{ code }}" style="text-align:center;font-size:25; background-color:white; color:#616161; margin-top:50; padding: 15;"/>
            <ActivityIndicator busy="{{loading}}" style="color:red; margin-top:15" />
        </StackLayout>
    </ScrollView> 
  </GridLayout>